<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="MainGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <Button x:Name ="btnStart" Content="Start" Margin="0,0,10,10" Click="Button_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="23" Width="60"/>
        <Canvas x:Name ="DrawGrid" Height="258" Margin="10" VerticalAlignment="Top" MinWidth="400" HorizontalAlignment="Left"/>
    </Grid>
</Window>
